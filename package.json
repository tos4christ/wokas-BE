{
  "name": "wokas-be",
  "version": "0.0.0",
  "private": true,
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js",
      "*.spec.ts"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "transpile": "babel server -d build/server",
    "build": "npm-run-all clean transpile",
    "serve": "node ./build/server/bin/www",
    "watch:dev": "nodemon",
    "dev": "npm-run-all build serve",
    "prod": "npm-run-all build serve",
    "start": "npm run prod"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cloudinary": "^1.22.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.18.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "node-input-validator": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "pg": "^8.2.1",
    "rimraf": "^3.0.2",
    "socket.io": "^2.3.0",
    "supertest": "^4.0.2",
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "babel-jest": "^26.0.1"
  },
  "devDependencies": {
    "eslint": "^7.3.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.21.2",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4"
  }
}
